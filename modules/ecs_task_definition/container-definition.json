{
    "cpu": ${cpu},
    "essential": true,
    "image": "${image_url}",
    "memory": ${mem},
    "memoryReservation": ${mem_reservation},
    "name": "${container_name}",
    ${hostname_block}
    ${portmappings_block}
    ${mountpoints_block}
    "environment": ${envvars},
    "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "${log_group_name}",
            "awslogs-region": "${log_group_region}",
            "awslogs-stream-prefix": "${container_name}"
        }
    }
}
