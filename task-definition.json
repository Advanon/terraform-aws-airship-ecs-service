{
    "cpu": ${cpu},
    "essential": true,
    "image": "${image_url}",
    "memory": ${mem},
    "name": "${container_name}",
    ${hostname_block}
    "portMappings": [
      {
        "containerPort": ${container_port},
        "hostPort": ${host_port} 
      }
    ],
    "environment": [
${envvars}
{
  "name": "TASK_TYPE",
  "value": "${task_type}"
},
{
  "name": "SSM_AVAILABLE",
  "value": "true"
}
    ],
    "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "${log_group_name}",
            "awslogs-region": "${log_group_region}",
            "awslogs-stream-prefix": "0"
        }
    }
}
